*,
*::before,
*::after {
    box-sizing: border-box;
}

html,
body {
    color: darken(text, 20%);
    line-height: 1.3;
    height: 100%;

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

body {
    overflow-x: hidden;
}

a {
    border-bottom: 1px dotted currentColor;
    text-decoration: none;
    transition: border-color 300ms ease;

    &:focus {
        outline: 1px solid currentColor;
        outline-offset: 3px;
    }

    &:hover {
        border-bottom-style: solid;
    }
}

a.fa {
    border: 1px solid transparent;
    font-size: 1.5em;
    margin-right: 1rem;
    padding: 1rem;
    text-decoration: none;

    &:first-child {
        margin-left: -1rem;
    }

    &:hover {
        border-color: accent;
    }
}

h2 {
    color: darken(text, 60%);
    font-size: 18px;
    font-weight: 400;
    flex-basis: auto;
    margin: 0 0 2rem;
    padding: 0;
    position: relative;
    // text-transform: uppercase;

    &:last-child {
        margin: 0;
    }

    span {
        display: block;
        margin-bottom: 40px;
        position: relative;

        &::after {
            background: accent;
            content: '';
            height: 1px;
            width: 30px;
            position: absolute;
            left: 0;
            bottom: -20px;
        }
    }
}

header {
    align-items: flex-start;
    background: url('/dist/img/me-1x.jpg') center right/cover no-repeat;
    display: flex;
    flex-direction: column;
    font-size: 18px;
    min-height: 98vh;
    overflow: hidden;
    padding-top: padding;
    padding-left: padding;
    position: relative;

    &::after {
        background: linear-gradient(
            to right,
            rgba(#000, 0.8) 0%,
            rgba(#000, 0.6) 50%,
            transparent 100%
        );
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    > * {
        position: relative;
        z-index: 1;
    }

    footer {
        margin-top: auto;
        margin-bottom: "calc(%s - 1rem)" % padding;
    }

    pre {
        max-width: 60vw;

        code {
            color: darken(#FFF, 55%);
        }
    }
}

section {
    outline: 1px solid;
    outline-offset: ceil(padding / 2) * -1;
    padding: padding;
    position: relative;

    h2 {
        line-height: 1;
        position: absolute;
        top: "calc(%s - 0.5em)" % ceil(padding / 2);
        left: padding;
        z-index: 1;

        &::after {
            background: bg;
            content: '';
            position: absolute;
            top: 0;
            left: -1em;
            bottom: 0;
            right: -1em;
            z-index: -1;
        }
    }
}

code {
    background: rgba(#FFF, 0.15);
    color: #FFF;
    padding: 0 0.25rem;
}

pre {
    margin-top: 0;
    white-space: pre-line;
}

pre code {
    background: 0;
    padding: 0;
}

// Global classes + helpers

[aria-hidden] {
    display: none;
}

list-spacing = 3em

#projects {
    display: block;
    outline-color: accent-magenta;

    ::selection {
        background-color: rgba(accent-magenta, 0.3);
    }

    a {
        color: accent-magenta;

        &.fa {
            &:hover {
                border-color: accent-magenta;
            }
        }
    }

    article {
        align-content: flex-start;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        max-width: none;
    }

    dl {
        align-self: flex-start;
        flex: 0 1 30%;
        margin: 0;
        padding: 0 0 list-spacing;

        &:nth-last-of-type(1),
        &:nth-last-of-type(2),
        &:nth-last-of-type(3) {
            padding-bottom: 0;
        }
    }

    dt {
        color: darken(text, 50%);
        display: block;
        margin: 0 0 1em;

        a {
            margin-right: 0.25em;
        }
    }

    dd {
        margin: 0;
    }

    h2 {
        color: accent-magenta;
    }
}

#writing {
    outline-color: accent-yellow;

    ::selection {
        background-color: rgba(accent-yellow, 0.3);
    }

    a {
        color: accent-yellow;

        &.fa {
            &:hover {
                border-color: accent-yellow;
            }
        }
    }

    h2 {
        color: accent-yellow;
    }

    ul {
        list-style-type: none;
        margin-top: 0;
        padding: 0;
    }

    ul + a {
        margin-left: 8.85em;
    }

    li a {
        margin-left: 0.5em;
    }

    li + li {
        margin-top: 1rem;
    }
}

// Media queries

@media all and (min-width: 1081px) {
    header {
        background-image: url('/dist/img/me-3x.jpg');
    }
}

@media all and (max-width: 1080px) {
    header {
        background-image: url('/dist/img/me-2x.jpg');
    }
}

@media all and (max-width: 750px) {
    .media-not-small {
        display: none;
    }

    a {
        border: none !important;
    }

    header {
        background-position: top right;
        font-size: 14px;
        min-height: 0;
        padding: 10vw;

        &::after {
            background: linear-gradient(
                to right,
                rgba(#000, 0.9) 0%,
                rgba(#000, 0.5) 70%,
                transparent 100%
            );
        }

        footer {
            margin-bottom: 0;
        }

        pre {
            max-width: none;
        }
    }

    section {
        display: flex;
        flex-direction: column;
        outline-offset: -5vw;
        padding: 15vw 10vw;

        > * {
            flex-basis: auto;
            padding: 5% 15%;

            &:first-child {
                padding-top: 10%;
            }

            &:last-child {
                padding-bottom: 10%;
            }
        }

        h2 {
            flex-basis: auto !important;
            font-size: 1rem;
            padding: 0 !important;
            left: 10vw;
            top: calc(5vw - 0.5em);

            &::after {
                left: -0.75em;
                right: -0.75em;
            }
        }
    }

    #projects {
        article {
            padding: 0;
        }

        dl {
            flex-basis: auto;

            &:not(:last-child) {
                padding-bottom: 2rem !important;
            }
        }
    }

    #writing {
        li {
            & + li {
                margin-top: 2rem;
            }

            a {
                display: block;
                margin: 0.5rem 0 0;
            }
        }

        ul + a {
            margin: 2rem 0 0;
            padding: 0;
        }
    }
}

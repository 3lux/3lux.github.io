// Variables

bg = #1d1d1d
accent-yellow = #fbb829
accent-cyan = rgb(67, 244, 253)
accent-magenta = rgb(253, 65, 195)
text = #FFF
font-stack = "Droid Sans Mono", Monaco, Consolas, monospace;
padding = 75px;

accent ?= accent-cyan

::selection {
    background-color: rgba(accent, 0.3);
}

//! normalize.css v2.1.3 | MIT License | git.io/normalize
// removed styles that would not be used

// Correct `block` display not defined in IE 8/9.

article,
footer,
header,
section {
    display: block;

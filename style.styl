*,
*::before,
*::after {
    box-sizing: border-box;
}

html,
body {
    color: darken(text, 20%);
    line-height: 1.3;
    height: 100%;

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

body {
    overflow-x: hidden;
}

a {
    border-bottom: 1px dotted currentColor;
    font-weight: 700;
    text-decoration: none;
    transition: border-color 300ms ease;

    &:focus {
        outline: 1px solid currentColor;
        outline-offset: 3px;
    }

    &:hover {
        border-bottom-style: solid;
    }
}

a.fa {
    border: 1px solid transparent;
    font-size: 1.5em;
    margin-right: 1rem;
    padding: 1rem;
    text-decoration: none;

    &:first-child {
        margin-left: -1rem;
    }

    &:hover {
        border-color: accent;
    }
}

h2 {
    color: darken(text, 60%);
    font-size: 18px;
    flex-basis: auto;
    margin: 0 0 2rem;
    padding: 0;
    position: relative;
    // text-transform: uppercase;

    &:last-child {
        margin: 0;
    }

    span {
        display: block;
        margin-bottom: 40px;
        position: relative;

        &::after {
            background: accent;
            content: '';
            height: 1px;
            width: 30px;
            position: absolute;
            left: 0;
            bottom: -20px;
        }
    }
}

header {
    align-items: flex-start;
    background: url('/dist/img/me-1x.jpg') center right/cover no-repeat;
    display: flex;
    flex-direction: column;
    font-size: 18px;
    min-height: 98vh;
    overflow: hidden;
    padding-top: padding;
    padding-left: padding;
    position: relative;

    &::after {
        background: rgba(#000, 0.6);
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }

    > * {
        position: relative;
        z-index: 1;
    }

    footer {
        font-weight: 700;
        margin-top: auto;
        margin-bottom: padding;
    }

    h1 {
        font-size: 5vw;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    pre {
        max-width: 60vw;
    }
}

body > section {
    outline-offset: ceil(padding / 2) * -1;
    padding: padding;

    for i in (1..2) {
        &:nth-of-type({i}) {
            bg = lighten(bg, i * 2%);

            background: bg;
            outline: 1px solid lighten(bg, 10%);
        }
    }
}

code {
    background: rgba(#FFF, 0.15);
    color: #FFF;
    font-family: "Droid Sans Mono", monospace;
    padding: 0 0.25rem;
}

pre {
    margin-top: 0;
    white-space: pre-line;
}

pre code {
    background: 0;
}

// Global classes + helpers

[aria-hidden] {
    display: none;
}

list-spacing = 3em

#projects {
    display: block;

    h2 {
        .fa {
            margin-right: 0.25em;
        }
    }

    article {
        align-content: flex-start;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        max-width: none;
    }

    dl {
        align-self: flex-start;
        flex: 0 1 30%;
        margin: 0;
        padding: 0 0 list-spacing;

        &:nth-last-of-type(1),
        &:nth-last-of-type(2),
        &:nth-last-of-type(3) {
            padding-bottom: 0;
        }
    }

    dt {
        color: darken(text, 50%);
        display: block;
        font-weight: 700;
        margin: 0 0 1em;

        a {
            margin-right: 0.25em;
        }
    }

    dd {
        margin: 0;
    }
}

#writing {
    ul {
        list-style-type: none;
        margin-top: 0;
        padding: 0;
    }

    ul + a {
        margin-left: 8.25em;
    }

    li a {
        margin-left: 0.5em;
    }

    li + li {
        margin-top: 1rem;
    }
}

// Media queries

@media all and (min-width: 1081px) {
    header {
        background-image: url('/dist/img/me-3x.jpg');
    }
}

@media all and (max-width: 1080px) {
    header {
        background-image: url('/dist/img/me-2x.jpg');
    }
}

@media all and (max-width: 750px) {
    .media-not-small {
        display: none;
    }

    header {
        background-position: top right;
        font-size: 14px;
        min-height: 0;
        padding: 10vw;

        footer {
            margin-bottom: 0;
        }

        pre {
            max-width: none;
        }
    }

    a {
        border: none !important;
    }

    body > section {
        display: flex;
        flex-direction: column;
        outline-offset: -5vw;
        padding: 10vw;

        > * {
            flex-basis: auto;
            padding: 5% 15%;

            &:first-child {
                padding-top: 10%;
            }

            &:last-child {
                padding-bottom: 10%;
            }
        }

        h2 {
            flex-basis: auto !important;
            padding: 0 !important;
        }
    }

    #projects {
        article {
            padding: 0;
        }

        dl {
            flex-basis: auto;

            &:not(:last-child) {
                padding-bottom: 2rem !important;
            }
        }
    }

    #writing {
        li {
            & + li {
                margin-top: 2rem;
            }

            a {
                display: block;
                margin: 0.5rem 0 0;
            }
        }

        ul + a {
            margin: 2rem 0 0;
            padding: 0;
        }
    }
}
